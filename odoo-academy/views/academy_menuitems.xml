<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data noupdate="1">
            <record id="course_list_action" model="ir.actions.act_window">  
                <field name="name">Courses</field> 
                <field name="res_model">academy.course</field> 
                <field name="view_mode">tree,form</field>
                <field name="help" type='html'>
                    <p class="o_view_nocontent_smiling_face">
                    Create the first course
                    </p>
                </field>
            </record>

            <record id="session_list_action" model="ir.actions.act_window">
                <field name="name">Sessions</field>
                <field name="res_model">academy.session</field>
                <field name="view_mode">tree,form</field>
                <field name="help" type="html">
                    <p class="o_view_nocontent_smiling_face"> 
                    Create the first sessions
                    </p>
                </field>
            </record>
        
            <menuitem
                id="menu_academy"
                name="Odoo Academy"
                sequence="1"/>
            <menuitem
                id="menu_academy_sub"
                name="Odoo Academy"
                parent="menu_academy"
                sequence="2"/>
            <menuitem
                id="menu_academy_courses"
                name="Odoo Academy"
                action="course_list_action"
                parent="menu_academy_sub"
                sequence="3"/>

            <menuitem
                id="menu_academy_session"
                name="Sessions"
                sequence="4"
                parent="menu_academy_sub"
                action="session_list_action"/>
    </data>
</odoo>