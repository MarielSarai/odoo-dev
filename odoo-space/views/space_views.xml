<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="space_view_form" model="ir.ui.view">
        <field name="mame">space.odoo.form</field>
        <field name="model">space.odoo</field>
        <field name="arch" type="xml">
            <form string="Space form">
                <sheet>
                    <h1><field name="name"></field></h1>
                        <group>
                            <group>
                                <field name="tipobarco"/>
                                <field name="numpasajeros"/>
                            </group>
                        </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="space_view_list" model="ir.ui.view">
        <field name="name">space.course.list</field>
        <field name="model">space.odoo</field>
        <field name="arch" type="xml">
            <tree string='Space list'>
                <field name="name"/>
                <field name="tipobarco"/>
                <field name="numpasajeros" />
            </tree>
        </field>
    </record>
</odoo>
